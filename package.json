{
  "name": "tree-sitter-midnite",
  "version": "0.1.0",
  "description": "Midnite grammar for tree-sitter",
  "repository": "https://github.com/rhoskal/midnite",
  "license": "MIT",
  "author": {
    "name": "Hans Hoffman"
  },
  "main": "bindings/node",
  "types": "bindings/node",
  "keywords": [
    "incremental",
    "parsing",
    "tree-sitter",
    "midnite"
  ],
  "files": [
    "grammar.js",
    "tree-sitter.json",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "dependencies": {},
  "devDependencies": {
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "lint-staged": "^15.4.3",
    "prebuildify": "^6.0.1",
    "prettier": "^3.5.3"
  },
  "scripts": {
    "format": "prettier --write '**/*.js'",
    "prepare": "is-ci || husky"
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write"
    ]
  }
}
